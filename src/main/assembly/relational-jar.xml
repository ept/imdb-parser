<assembly>
    <id>relational-jar</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>uk.ac.cam.cl.databases.moviedb:moviedb-exercises</include>
                <include>org.hsqldb:hsqldb</include>
                <include>net.sf.corn:corn-cps</include>
            </includes>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <unpack>true</unpack>
            <unpackOptions>
                <excludes>
                    <exclude>META-INF/**</exclude>
                </excludes>
            </unpackOptions>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <fileSet>
            <directory>relational-db</directory>
            <outputDirectory>resources/relational-db</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
